{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "models",
    "theme",
    "*.ts",
    "*.tsx",
    "*.d.ts"
  ]
}
